<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:id="@+id/f2_item_re1"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="6dp"
        android:id="@+id/f2_item_lin1"
        android:visibility="gone">


        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="0dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_author"
                android:id="@+id/f2_item_image1"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/f2_item_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="middle"
            android:text="@string/app_author"
            android:textSize="14sp"
            android:theme="@style/index_text_bottom2" />

    </LinearLayout>




    <TextView
        android:id="@+id/f2_item_text3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:ellipsize="end"
        android:text="@string/app_author"
        android:textSize="14sp"
        android:theme="@style/index_text_bottom2"
        android:gravity="center"
        android:background="@drawable/bg_item"
        android:layout_margin="@dimen/dp_10"
        android:visibility="gone"/>



    <TextView
        android:id="@+id/f2_item_text1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ellipsize="end"
        android:text="@string/app_author"
        android:textSize="14sp"
        android:theme="@style/index_text_bottom3"
        android:gravity="center"
        android:background="@color/white_A0D"/>

</LinearLayout>