<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:id="@+id/html_item_lin1">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:elevation="0dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">
        <ImageView
            android:id="@+id/html_item_image1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_author"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="14dp">

        .<TextView
            android:id="@+id/html_item_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_author"
            android:textSize="16sp"
            android:theme="@style/index_text_bottom3" />


        <com.pikachu.menu.widget.ScoreView
            android:id="@+id/html_item_scoreView1"
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:layout_marginTop="6dp"
            android:layout_below="@id/html_item_text1"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical">


            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:src="@drawable/ic_home_like" />

            <TextView
                android:id="@+id/html_item_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_author"
                android:textSize="10sp"
                android:theme="@style/index_text_bottom2"
                tools:ignore="SmallSp"
                android:layout_marginStart="6dp"/>



            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_home_liu"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/html_item_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_author"
                android:textSize="10sp"
                android:theme="@style/index_text_bottom2"
                tools:ignore="SmallSp"
                android:layout_marginStart="6dp"/>

        </LinearLayout>





    </RelativeLayout>



</LinearLayout>